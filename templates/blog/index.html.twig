{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <div class="site-section bg-light">
        <div class="container">
            {% for post in posts %}
                <div class="row">
                    <div class="col-lg-12 col-md-12 mb-12">
                        <div class="post-entry-1 h-100">
                            <div class="row">
                                <div class="col-lg-4 col-md-4 mb-4">
                                    <a href="{{ path('post_show', {id: post.id}) }}">
                                        <img src="{{ asset('images/' ~ post.visual) }}" alt="Image" class="img-fluid">
                                    </a>
                                </div>
                                <div class="col-lg-8 col-md-8 mb-8">
                                    <div class="post-entry-1-contents">
                                        <h2><a href="{{ path('post_show', {id: post.id}) }}">{{ post.title }}</a></h2>
                                        <span class="meta d-inline-block mb-3">{{ post.publicationDate|date('d-m-Y H:i') }}</span>
                                        <p>{{ post.resume|raw }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
